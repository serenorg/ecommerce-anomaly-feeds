{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "vitest"],
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["src", "tests", "frontend"],
  "exclude": ["dist"]
}
